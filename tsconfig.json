{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "outDir": "lib",
    "baseUrl": "src",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "module": "esnext",
    "target": "esnext"
  },
  "exclude": ["src/**/*.test.ts"]
}
